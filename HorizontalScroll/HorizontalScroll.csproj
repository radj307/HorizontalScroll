<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\horizontal-scroll.ico</ApplicationIcon>
    <Authors>radj307</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description> Adds horizontal mouse wheel support to WPF</Description>
    <Version>0.0.0</Version>
    <FileVersion>0.0.0</FileVersion>
    <Copyright>Copyright Â© 2023 by $(Authors)</Copyright>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="Resources\horizontal-scroll.ico" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.77" />
  </ItemGroup>
</Project>